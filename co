#include <iostream>
#include <stdio.h>
using namespace std;

int main() {
    int t;
    cin >> t;
   for(int s=0;s<t;s++)
    {
        long long int n,temp=0,c=0;
       n>>n;
        int a[n];
        for(long long int i=0;i<n;i++)
        {
          cin >> a[i];
        }
        for(long long int i=0;i<n;i++)
        {
            c=a[i]+a[i+1]+a[i+2];
            if(c>temp)
            {
                temp=c;
            }
            
            
        }
        cout << temp;
        cout << "\n";
    }
	// your code goes here
	return 0;
}
